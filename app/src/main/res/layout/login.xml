<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#800C0C0C"
    android:background="#F5F5F5"
    android:backgroundTintMode="screen"
    android:orientation="vertical">

    <TextView
        android:id="@+id/messagem_inicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/mensagem_inicial"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textDirection="inherit"
        android:textIsSelectable="false"
        android:textSize="30sp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        app:srcCompat="@drawable/icon_user" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Usuário"
        android:textAlignment="inherit"
        android:textColor="#FF0000"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/campo_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Digite seu usuário"
        android:textStyle="italic"
        android:textSize="16dp"
        android:inputType="textPersonName"
        android:textAlignment="inherit"
        android:textColor="#FAF8F8"
        android:textColorHighlight="#F8F5F5"
        android:textColorHint="#CDCCCC" />

    <TextView
        android:id="@+id/campo_senha_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Senha"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:textAlignment="inherit"
        android:textColor="#FF0000"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24dp" />


    <EditText
        android:id="@+id/campo_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Digite sua senha"
        android:inputType="textPassword"
        android:textAlignment="inherit"
        android:textColor="#FFFEFE"
        android:textColorHint="#CCCACA"
        android:textSize="16dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_botao_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="login"
        android:textColor="#FFFFFF"
        app:iconTint="#FBFAFA" />




</LinearLayout>